<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassengersDetails">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/top_view_curve"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:backgroundTint="@color/purple">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <ImageView
            android:layout_marginTop="-1dp"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="#32289F"
            android:src="@drawable/busicon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/textSource"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@+id/imageView5"
                android:background="#32289F"
                android:text="Udupi"
                android:fontFamily="@font/quando_regular"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="-5dp"
                android:src="@drawable/ic_swap_horiz_white_24dp" />

            <TextView
                android:id="@+id/textDestination"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_below="@+id/imageView5"
                android:background="#32289F"
                android:text="Kasagor"
                android:fontFamily="@font/quando_regular"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textView3"
            android:background="#32289F"
            android:text="13-July-2023|9.30 A.M\n4 hours"
            android:fontFamily="@font/quando_regular"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>


        <TextView
            android:layout_marginTop="-5dp"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter Your Details"
            android:fontFamily="@font/quando_regular"
            android:layout_below="@+id/textView4"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextText2"
        android:layout_marginTop="33dp"
        android:layout_width="250dp"
        android:textSize="16sp"
        android:layout_height="40dp"
        android:fontFamily="@font/quando_regular"
        app:layout_constraintBottom_toTopOf="@+id/editTextText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:hint="Name"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="38dp"
        android:alpha="0.6"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toStartOf="@+id/editTextText2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:editable="false"
        android:textSize="16sp"
        android:id="@+id/editTextText3"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:fontFamily="@font/quando_regular"
        android:layout_height="35dp"
        android:inputType="none"
        android:textColor="@color/greyd"
        android:background="@color/grey"
        android:hint="Seat_No"
        app:layout_constraintBottom_toTopOf="@+id/editTextText4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="0.669" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="19dp"
        android:alpha="0.6"
        android:src="@drawable/baseline_airline_seat_recline_normal_24"
        app:layout_constraintEnd_toStartOf="@+id/editTextText2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />
    <EditText
        android:id="@+id/editTextText4"
        android:fontFamily="@font/quando_regular"
        android:editable="false"
        android:inputType="none"
        android:textSize="16sp"
        android:textColor="@color/greyd"
        android:background="@color/grey"
        android:hint="Number of seats"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3"
        app:layout_constraintVertical_bias="0.669" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:alpha="0.6"
        android:src="@drawable/baseline_event_seat_24"
        app:layout_constraintEnd_toStartOf="@+id/editTextText4"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />
    <EditText
        android:fontFamily="@font/quando_regular"
        android:id="@+id/editTextText5"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Mobile Number"
        android:textSize="16sp"
        android:inputType="number"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText4"
        app:layout_constraintVertical_bias="0.669" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:alpha="0.6"
        android:src="@drawable/baseline_local_phone_24"
        app:layout_constraintEnd_toStartOf="@+id/editTextText4"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />
    <EditText
        android:id="@+id/editTextText6"
        android:layout_width="250dp"
        android:editable="false"
        android:inputType="none"
        android:textColor="@color/greyd"
        android:background="@color/grey"
        android:hint="Email-Id"
        android:textSize="16sp"
        android:layout_height="35dp"
        android:fontFamily="@font/quando_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonnext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5"
        app:layout_constraintVertical_bias="0.669" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_marginTop="19dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.6"
        android:src="@drawable/baseline_email_24"
        app:layout_constraintEnd_toStartOf="@+id/editTextText6"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/quando_regular"
        android:text="Next"
        android:id="@+id/buttonnext"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText6"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>